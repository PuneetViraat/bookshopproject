@model IEnumerable<ProjectECommerce.Models.OrderDetail>

    <table class="table table-bordered table-active">
        <thead>
            <tr>
                <th>Order Id</th>
                <th>Date of Order</th>
                <th>Order Status</th>                
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
        {
           <tr>
               <td>@item.OrderHeader.Id</td>
               <td>@item.OrderHeader.OrderDate</td>
               <td>@item.OrderHeader.OrderStatus</td>
           </tr> 
        }
        </tbody>
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Amount</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
        {
            <tr>
                <th>@item.Product.Title</th>
                <th>@item.Product.Price</th>
                <th>@item.Count</th>
                <th>@item.OrderHeader.OrderTotal</th>
            </tr>
            
        }
        </tbody>

    </table>